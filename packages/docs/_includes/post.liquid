---
layout: main-layout.liquid
---

<div class="post">
  <aside class="sidebar">
    <nav class="sidebar-nav">
      {%- for section in navigation.sidebar -%}
      <div class="nav-section">
        <div class="nav-section-header">{{ section.title }}</div>
        <div class="nav-section-items">
          {%- for item in section.items -%}
          <a href="{{ item.url }}"
             class="nav-item{% if page.url == item.url %} active{% endif %}">
            {{ item.title }}
          </a>
          {%- endfor -%}
        </div>
      </div>
      {%- endfor -%}
    </nav>
  </aside>
  <main class="content">{{ content }}</main>
</div>
