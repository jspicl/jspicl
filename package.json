{
  "name": "@jspicl/jspicl",
  "version": "0.0.0",
  "private": true,
  "description": "jspicl monorepo - JavaScript to PICO-8 Lua transpiler",
  "license": "MIT",
  "author": "Agron Kabashi",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bump": "yarn workspaces foreach --all --topological --no-private version",
    "release": "yarn prerelease && yarn workspaces foreach --all --topological --no-private npm publish",
    "build": "yarn workspaces foreach -A --topological run build",
    "clean": "yarn workspaces foreach -A run clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "prettier --check .",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "vitest": "^4.0.18"
  },
  "packageManager": "yarn@4.6.0",
  "engines": {
    "node": ">=22"
  }
}
